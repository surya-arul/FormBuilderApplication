@page "/Surveys"
@rendermode InteractiveServer

<h3>Surveys</h3>

<div class="container body-content border p-3 mt-4 mb-4">

    <div class="row mb-3">
        <div class="col-md-2">
            <button class="btn btn-primary" @onclick="NavigateToCreateSurvey">Create survey</button>
        </div>
    </div>

    <table class="table table-hover table-striped-columns table-bordered table-responsive">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Open Date
                </th>
                <th>
                    End Date
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (_getAllSurveysResponse is not null)
            {
                @foreach (var item in _getAllSurveysResponse.Surveys)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.OpenDate
                        </td>
                        <td>
                            @item.EndDate
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm" @onclick="@(() => EditSurvey(item.Id))">Edit</button>
                            <button class="btn btn-danger btn-sm" @onclick="@(() => DeleteSurvey(item.Id))">Delete</button>
                            <button class="btn btn-info btn-sm" @onclick="@(() => PreviewSurvey(item.Id))">Preview</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
