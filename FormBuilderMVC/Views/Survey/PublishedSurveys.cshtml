@using FormBuilderDTO.DTOs.Survey
@using FormBuilderMVC.Controllers
@using FormBuilderSharedService.Utilities
@model GetPublishedSurveysResponse

@{
    ViewData["Title"] = "Published surveys";
}

<h3>Published surveys</h3>

<div class="container body-content border p-3 mt-4 mb-4">

    <table class="table table-hover table-striped-columns table-bordered table-responsive">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Open Date
                </th>
                <th>
                    End Date
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model.Surveys is not null)
            {
                @foreach (var item in Model.Surveys)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.OpenDate
                        </td>
                        <td>
                            @item.EndDate
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="@nameof(FormBuilderController.PreviewSurvey)" asp-controller="@StringHelper.ExtractControllerName(typeof(FormBuilderController))" asp-route-id="@item.Id">Preview</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>