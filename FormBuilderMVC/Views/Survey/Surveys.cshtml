@using FormBuilderDTO.DTOs.Survey
@using FormBuilderMVC.Controllers
@using FormBuilderSharedService.Utilities
@model GetAllSurveysResponse

@{
    ViewData["Title"] = "Surveys";
}

<h4>Survey List</h4>
<hr />

<div class="container body-content border p-3 mt-4 mb-4">

    <div class="row mb-3">
        <div class="col-md-2">
            <a class="btn btn-primary" asp-action="@nameof(SurveyController.CreateSurvey)" asp-controller="@StringHelper.ExtractControllerName(typeof(SurveyController))">Create survey</a>
        </div>
    </div>

    <table class="table table-hover table-striped-columns table-bordered table-responsive">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Open Date
                </th>
                <th>
                    End Date
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model.Surveys is not null)
            {
                @foreach (var item in Model.Surveys)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.OpenDate
                        </td>
                        <td>
                            @item.EndDate
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="@nameof(SurveyController.EditSurvey)" asp-controller="@StringHelper.ExtractControllerName(typeof(SurveyController))" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="@nameof(SurveyController.DeleteSurvey)" asp-controller="@StringHelper.ExtractControllerName(typeof(SurveyController))" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-info btn-sm" asp-action="@nameof(FormBuilderController.PreviewSurvey)" asp-controller="@StringHelper.ExtractControllerName(typeof(FormBuilderController))" asp-route-id="@item.Id">Preview</a>
                            <a class="btn btn-success btn-sm" asp-action="@nameof(FormBuilderController.ViewUserSubmitDetails)" asp-controller="@StringHelper.ExtractControllerName(typeof(FormBuilderController))" asp-route-surveyId="@item.Id">View user data</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
