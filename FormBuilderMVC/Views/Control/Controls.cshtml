@using FormBuilderDTO.DTOs.Control
@using FormBuilderMVC.Controllers
@using FormBuilderSharedService.Utilities
@model GetAllControlsResponse

@{
    ViewData["Title"] = "Controls";
}

<h4>Controls List</h4>
<hr />

<div class="container body-content border p-3 mt-4 mb-4">

    <div class="row mb-3">
        <div class="col-md-2">
            <a class="btn btn-primary" asp-action="@nameof(ControlController.CreateControl)" asp-controller="@StringHelper.ExtractControllerName(typeof(ControlController))">Create control</a>
        </div>
    </div>

    <table class="table table-hover table-striped-columns table-bordered table-responsive">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    Internal name
                </th>
                <th>
                    Input type
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model.Controls is not null)
            {
                @foreach (var item in Model.Controls)
                {
                    <tr>
                        <td>
                            @item.InternalName
                        </td>
                        <td>
                            @item.InputType
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="@nameof(ControlController.EditControl)" asp-controller="@StringHelper.ExtractControllerName(typeof(ControlController))" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="@nameof(ControlController.DeleteControl)" asp-controller="@StringHelper.ExtractControllerName(typeof(ControlController))" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
